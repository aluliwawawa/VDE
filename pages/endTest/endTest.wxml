<view class="result-header">
  <text class="result-title">测试完成</text>
</view>

<view class="result-details">
  <view class="score-info">
    <text class="score-text">得分：{{score}}/{{total}}</text>
  </view>
  <view class="detail-item">
    <text class="detail-text">{{strafeText}}</text>
  </view>
  <view class="detail-item">
    <text class="detail-text">{{lrText}}</text>
  </view>
</view>

<view class="button-group">
  <t-button theme="primary" block bind:tap="restartTest">重新测试</t-button>
  <t-button theme="default" block bind:tap="backToHome">返回首页</t-button>
</view>