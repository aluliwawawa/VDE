page {
  background-color: #fff;
  min-height: 100vh;
  padding: 32rpx;
  box-sizing: border-box;
}

.result-header {
  text-align: center;
  margin-bottom: 32rpx;
}

.result-title {
  display: block;
  font-size: 48rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
}

.result-description {
  display: block;
  font-size: 32rpx;
  color: #666;
  line-height: 1.5;
}

.result-details {
  margin-top: 32rpx;
  padding: 32rpx;
  background-color: #f8f9fa;
  border-radius: 12rpx;
  border: 1rpx solid #e9ecef;
}

.score-info {
  margin-bottom: 24rpx;
  text-align: center;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #dee2e6;
}

.score-text {
  font-size: 36rpx;
  font-weight: 600;
  color: #0052d9;
}

.detail-item {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  padding: 16rpx 0;
}

.detail-item:last-child {
  margin-bottom: 0;
}

.detail-text {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
}

.button-group {
  margin-top: 32rpx;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
} 