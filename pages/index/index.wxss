/* pages/index/index.wxss */
.container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 32rpx;
  background-color: #f5f5f5;
  margin-top: -300rpx;
}

.content {
  width: 100%;
  max-width: 600rpx;
  text-align: center;
  background-color: #fff;
  padding: 48rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 32rpx;
  display: block;
}

.description {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 48rpx;
  display: block;
  line-height: 1.5;
}

.start-btn {
  margin-top: 32rpx;
}
